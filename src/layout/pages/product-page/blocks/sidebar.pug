.shop-aside_block.animate-fade(v-if="productPageCtrl.similarProducts.length")
  .shop-sidebar_title
    h3 Similar Products
  ul.shop-sidebar_list
    li(
      v-for="(similarProduct, id) in productPageCtrl.similarProducts"
      :key="id"
    )
      product-item.shop-tile(
        :product-similar="similarProduct"
      )
