.page_reviews
  h3.reviews-title Reviews ({{ reviewCount || 0}})
  .button-wrap
    button.btn.btn--gray(
      type="button"
      @click.prevent="deleteReview"
    ) Delete Review
    button.btn.btn--primary.add-review-button(
      type="button"
      @click.prevent="addReview"
    ) Add Review
.form
  input.form-review_field(
    type="text"
    v-model="productPageCtrl.review.title"
  )
  textarea(v-model="productPageCtrl.review.description")
  user-review.animate-fade-in(
    v-for="(review, index) in productPageCtrl.reviews"
    :key="index"
    :productReview="review"
  )
  p(
    v-if="productPageCtrl.reviewCount === 0"
  ) No reviews added
